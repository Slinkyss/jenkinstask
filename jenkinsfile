pipeline {
     agent any
     stages {
         stage('Build') {
             steps {
                 sh 'echo "Building"'
             }
         }
         stage('Input'){
                         steps {
                input('Do you want to proceed?')
            }
        }
         stage('Upload to AWS') {
              steps {
                  withAWS(region:'eu-west-1',credentials:'testcred') {
                  sh 'echo "Uploading content with AWS creds"'
                      s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file:'first-stack.yaml', bucket:'jenkinsslinkisbucket')
                  }
              }
         }

     }
     post {

        success {
            echo 'I succeeded!'
        }
        aborted {
            echo 'Aborted!'
            sh '''
            git checkout -b faultycommits
            git revert -m 1 HEAD
            git branch -d faultycommit
            git checkout main
            git merge faultycommits
            git push

            '''

        }

    }
}
