pipeline {
     agent any
     stages {
         stage('Build') {
             steps {
                 sh 'echo "Building"'
             }
         }
         stage('Input'){
                         steps {
                input('Do you want to proceed?')
            }
        }
         stage('Upload to AWS') {
              steps {
                  withAWS(region:'eu-west-1',credentials:'awsid') {
                  sh 'echo "Uploading content with AWS creds"'
                      s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file:'first-stack.yaml', bucket:'jenkinsslinkisbucket')
                  }
              }
         }

     }
     post {

        success {
            echo 'I succeeded!'
        }
        aborted {
            withCredentials([gitUsernamePassword(credentialsId: 'githubpassword', gitToolName: 'Default')]) {      
            echo 'Aborted!'
            sh '''
            git checkout -b miskastes
            git revert -m 1 HEAD
            git checkout main
            git merge miskastes
            git push origin main
            git checkout miskastes
            git branch -d miskastes

            '''

        }
        }

    }
}
